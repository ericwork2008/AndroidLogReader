<?xml version="1.0" encoding="UTF-8"?>
<project name="module_logviewerapp" default="compile.module.logviewerapp">
  <dirname property="module.logviewerapp.basedir" file="${ant.file.module_logviewerapp}"/>
  
  <property name="module.jdk.home.logviewerapp" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.logviewerapp" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.logviewerapp" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.logviewerapp" value="-encoding UTF-8 -source 7 -target 7 ${compiler.args}"/>
  
  <property name="logviewerapp.output.dir" value="${module.logviewerapp.basedir}/../production/LogViewerApp"/>
  <property name="logviewerapp.testoutput.dir" value="${module.logviewerapp.basedir}/../test/LogViewerApp"/>
  
  <path id="logviewerapp.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="logviewerapp.module.production.classpath">
    <path refid="${module.jdk.classpath.logviewerapp}"/>
    <pathelement location="${common.output.dir}"/>
    <path refid="library.com.apple:applejavaextensions:release.classpath"/>
    <pathelement location="${basedir}/libs/annotations-java5-16.0.2.jar"/>
  </path>
  
  <path id="logviewerapp.runtime.production.module.classpath">
    <pathelement location="${logviewerapp.output.dir}"/>
    <path refid="common.runtime.production.module.classpath"/>
    <path refid="library.com.apple:applejavaextensions:release.classpath"/>
    <pathelement location="${basedir}/libs/annotations-java5-16.0.2.jar"/>
  </path>
  
  <path id="logviewerapp.module.classpath">
    <path refid="${module.jdk.classpath.logviewerapp}"/>
    <pathelement location="${logviewerapp.output.dir}"/>
    <pathelement location="${common.testoutput.dir}"/>
    <pathelement location="${common.output.dir}"/>
    <path refid="library.com.apple:applejavaextensions:release.classpath"/>
    <pathelement location="${basedir}/libs/annotations-java5-16.0.2.jar"/>
  </path>
  
  <path id="logviewerapp.runtime.module.classpath">
    <pathelement location="${logviewerapp.testoutput.dir}"/>
    <pathelement location="${logviewerapp.output.dir}"/>
    <path refid="common.runtime.module.classpath"/>
    <path refid="library.com.apple:applejavaextensions:release.classpath"/>
    <pathelement location="${basedir}/libs/annotations-java5-16.0.2.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.logviewerapp">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.logviewerapp">
    <patternset refid="excluded.from.module.logviewerapp"/>
  </patternset>
  
  <path id="logviewerapp.module.sourcepath">
    <dirset dir="${module.logviewerapp.basedir}">
      <include name="resource"/>
      <include name="src/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.logviewerapp" depends="compile.module.logviewerapp.production,compile.module.logviewerapp.tests" description="Compile module LogViewerApp"/>
  
  <target name="compile.module.logviewerapp.production" depends="register.custom.compilers,compile.module.common" description="Compile module LogViewerApp; production classes">
    <mkdir dir="${logviewerapp.output.dir}"/>
    <javac2 destdir="${logviewerapp.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.logviewerapp}/javac">
      <compilerarg line="${compiler.args.logviewerapp}"/>
      <bootclasspath refid="logviewerapp.module.bootclasspath"/>
      <classpath refid="logviewerapp.module.production.classpath"/>
      <src refid="logviewerapp.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.logviewerapp"/>
    </javac2>
    
    <copy todir="${logviewerapp.output.dir}">
      <fileset dir="${module.logviewerapp.basedir}/resource">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.logviewerapp.basedir}/src/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.logviewerapp.tests" depends="register.custom.compilers,compile.module.logviewerapp.production" description="compile module LogViewerApp; test classes" unless="skip.tests"/>
  
  <target name="clean.module.logviewerapp" description="cleanup module">
    <delete dir="${logviewerapp.output.dir}"/>
    <delete dir="${logviewerapp.testoutput.dir}"/>
  </target>
</project>